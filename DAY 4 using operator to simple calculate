
#include <stdio.h>

int main()
{
   char operator;
   double num1,num2,result;
   printf("enter an operator (+,-,*,/) :");
   scanf("%c",&operator);
   printf("enter two operands: ");
   scanf("%lf %lf",&num1,&num2);
   
   
   switch(operator)
   {
       case '+':
       result = num1+num2;
       printf("result: %.2lf\n",result);
       break;
       
       case '-':
       result = num1-num2;
       printf("result: %.2lf\n",result);
       break;
       
       case '*':
       result = num1*num2;
       printf("result: %.2lf\n",result);
       break;
       
       case '/':
       if(num2!=0)
       {
       result = num1/num2;
       printf("result: %.2lf\n",result);
       }
       else
       printf("the divition is error because of the 0");
       
       
       break;
       
   }

    return 0;
}
